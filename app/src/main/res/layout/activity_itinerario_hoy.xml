<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#893ca8"
    android:orientation="vertical"
    tools:context=".ItinerarioHoyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/event"
            android:id="@+id/ticket"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/ticket"
            android:text="Itinerario del evento"
            android:textColor="#fff"
            android:textSize="25dp"
            android:id="@+id/bienvenido2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="370dp"
            android:layout_below="@id/bienvenido2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Itinerario del hoy"
                android:textSize="20dp"/>

            <ListView
                android:layout_width="275dp"
                android:layout_height="300dp"
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/listaActividades"/>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>