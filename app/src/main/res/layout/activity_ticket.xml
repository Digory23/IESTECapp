<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6b2d92"
    android:orientation="vertical"
    tools:context=".TicketActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/airfare"
            android:id="@+id/ticket"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/ticket"
            android:text="Ticket de entrada"
            android:textColor="#fff"
            android:textSize="25dp"
            android:id="@+id/bienvenido2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="370dp"
            android:layout_below="@id/bienvenido2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/nombre_completo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="Participante"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_purple"
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp"
                android:src="@drawable/qrcode"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="290dp"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_purple"
                android:id="@+id/tiquete_en"
                />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>